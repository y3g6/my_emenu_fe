<div class="row justify-content-center p-5">
  <div class="col-md-6">
    <ul class="list-group">
      <li class="list-group-item">
        ID:<b><%= @restaurant.id %></b>
      </li>
      <li class="list-group-item">
        Name:<b><%= @restaurant.name %></b>
      </li>
      <li class="list-group-item">
        Owner:<b><%= @restaurant.owner.email %></b>
      </li>
      <li class="list-group-item">
        Category: <b><%= @restaurant.category.name %></b>
      </li>
      <li class="list-group-item">
        Cover:
        <%= image_tag  @restaurant.cover.attached? ? @restaurant.cover : "male_avatar.png", class: "img-fluid" %>
      </li>

      <li class="list-group-item">
        Profile:
        <%= image_tag  @restaurant.profile.attached? ? @restaurant.profile.variant(:thumb) : "male_avatar.png", class: "img-fluid" %>
      </li>

      <li class="list-group-item">
        Image:
        <% if @restaurant.images.attached? %>
          <% @restaurant.images.each do |image| %>
            <%= image_tag image, class: "img-fluid" %>
          <% end %>
        <% end %>
      </li>

      <li class="list-group-item">
        <div class="row">
          <div class="col">
            <%= link_to("Back", owner_restaurants_path, class: "btn btn-secondary") %>
          </div>
          <div class="col">
            <%= link_to("Edit", edit_owner_restaurant_path(@restaurant.id), class: "btn btn-primary") %>
          </div>
          <div class="col">
            <%= button_to 'delete', owner_restaurant_path(@restaurant.id), class: "btn btn-danger", method: :delete,
              form: {data: {turbo_confirm: 'Are you sure?'}} %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
